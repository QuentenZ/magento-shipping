<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <carriers>
            <redjepakketjeStandard>
                <model>RedJePakketje\Shipping\Model\StandardCarrier</model>
                <title>Red Je Pakketje</title>
                <title_before_cutoff>RJP</title_before_cutoff>
                <title_after_cutoff>RJP</title_after_cutoff>
                <title_weekend>RJP</title_weekend>
                <title_holiday>RJP</title_holiday>
                <description_before_cutoff>Delivered the same day when ordered before %cutoff.</description_before_cutoff>
                <description_after_cutoff>Delivered the next day when ordered after %cutoff.</description_after_cutoff>
                <description_weekend>Can not deliver during the weekend, will be delivered on the next available weekday</description_weekend>
                <description_holiday>Can not deliver during a holiday, will be delivered on the next available weekday</description_holiday>
                <weekend_days>0,6</weekend_days>
                <pickup_days>1,2,3,4,5</pickup_days>
                <specificerrmsg>This shipping method is not available. To use this shipping method, please contact us.</specificerrmsg>
                <sallowspecific>1</sallowspecific>
                <specificcountry>NL</specificcountry>
            </redjepakketjeStandard>
        </carriers>

        <redjepakketje_tracking_configuration>
            <email>
                <identity>general</identity>
                <tracking_template>redjepakketje_tracking_configuration_email_tracking_template</tracking_template>
            </email>
        </redjepakketje_tracking_configuration>

        <redjepakketje_label_configuration>
            <general>
                <label_type>PDF</label_type>
                <label_size>A6</label_size>
                <auto_generate>1</auto_generate>
            </general>
        </redjepakketje_label_configuration>
    </default>
</config>
